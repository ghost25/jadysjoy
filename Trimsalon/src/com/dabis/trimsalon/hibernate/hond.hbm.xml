<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.dabis.trimsalon.beans">
 <class name="Hond" table="APP.HOND">
  <id column="HID" name="id">
   <generator class="native"/>
  </id>
  <property column="NAAM" generated="never" lazy="false" length="20" name="naam"/>
  <property column="RAS" generated="never" lazy="false" length="20" name="ras"/>
  <property column="REU" generated="never" lazy="false" name="reu" type="boolean"/>
  <property column="KLEUR" generated="never" lazy="false" length="20" name="kleur"/>
  <property column="GECASTREERD" generated="never" lazy="false"
   name="gecastreerd" type="boolean"/>
  <property column="GEBOORTEDATUM" generated="never" lazy="false"
   name="geboortedatum" type="date"/>
  <set cascade="delete-orphan" inverse="true" lazy="false" name="opmerkingen" table="APP.OPMERKINGHOND">
   <key column="HID"/>
   <many-to-many class="Opmerking" column="OID" unique="true"/>
  </set>
  <many-to-one class="Klant" column="KID" lazy="false" name="klant" not-null="true"/>
 </class>
</hibernate-mapping>
