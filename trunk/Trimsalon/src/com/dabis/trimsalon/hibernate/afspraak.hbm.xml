<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.dabis.trimsalon.beans">
  <class name="Afspraak" table="APP.AFSPRAAK">
     <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="begintijd" column="BEGINTIJD" type="calendar" />
        <property name="eindtijd" column="EINDTIJD" type="calendar" />
        <property name="behandeling" column="BEHANDELING" type="long" />
        <property name="klant" column="KLANT" type="long" />
        <property name="hond" column="HOND" type="long" />
        <property name="opmerkingen" column="OPMERKINGEN" length="50" />
        <property name="ophalen" column="OPHALEN" type="boolean" />
        <property name="afgehandeld" column="AFGEHANDELD" type="boolean" />
  </class>
</hibernate-mapping>