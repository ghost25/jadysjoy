<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.dabis.trimsalon.beans.Client" table="ADMIN.CLIENT">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>
        <property name="soort" column="SOORT" length="20" />
        <property name="naam" column="NAAM" length="20" />
        <property name="woonplaats" column="WOONPLAATS" length="20" />
        <property name="leeftijd" column="LEEFTIJD" type="integer" />
        <property name="gewicht" column="GEWICHT" type="integer" />
	</class>
</hibernate-mapping>