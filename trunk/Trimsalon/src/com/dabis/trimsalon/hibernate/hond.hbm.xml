<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.dabis.trimsalon.beans">
	<class name="Hond" table="APP.HOND">
	<id name="id" column="HID">
	    <generator class="native"/>
	</id>
	<property name="naam" column="NAAM" length="20" />
	<property name="ras" column="RAS" length="20" />
	<property name="reu" column="REU" type="boolean" />
	<property name="kleur" column="KLEUR" length="20" />
	<property name="gecastreerd" column="GECASTREERD" type="boolean" />
	<property name="geboortedatum" column="GEBOORTEDATUM" type="calendar_date" />
	 <set name="opmerkingen" table="APP.OPMERKINGHOND">
        <key column="HID"/>
        <many-to-many column="OID" unique="true" class="Opmerking"/>
    </set>
	<many-to-one name="klant" column="KID" not-null="true" class="Klant"/>  
     </class>
</hibernate-mapping>